{
  "id": "de.codeking.heatingschedule",
  "name": {
    "en": "Heating Schedule",
    "de": "Heizplan"
  },
  "description": {
    "en": "Homey Heating Schedule",
    "de": "Homey Heizplan"
  },
  "version": "0.0.1",
  "compatibility": "0.x || 1.x",
  "author": {
    "name": "Frank Herrmann",
    "email": "frank@codeking.de",
    "website": "https://codeking.de"
  },
  "contributors": {
    "developers": [
      {
        "name": "Frank Herrmann",
        "website": "https://codeking.de",
        "email": "frank@codeking.de"
      }
    ]
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": "tools",
  "permissions": [],
  "flow": {
    "triggers": [
      {
        "id": "heatingThermostatTriggered",
        "title": {
          "en": "Thermostat triggered",
          "de": "Thermostat wird aktualisiert"
        },
        "tokens": [
          {
            "name": "scheduleDeviceTriggered",
            "title": {
              "en": "Thermostat",
              "de": "Thermostat"
            },
            "example": {
              "en": "Livingroom: 20째",
              "de": "Wohnzimmer: 20째"
            }
          }
        ]
      },
      {
        "id": "heatingThermostatUpdated",
        "title": {
          "en": "Thermostat was updated",
          "de": "Thermostat wurde aktualisiert"
        },
        "tokens": [
          {
            "name": "scheduleDeviceUpdated",
            "title": {
              "en": "Thermostat",
              "de": "Thermostat"
            },
            "example": {
              "en": "Bathroom: 22째",
              "de": "Bad: 22째"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "scheduleState",
        "title": {
          "en": "Heating Schedule",
          "de": "Heizplan"
        },
        "args": [
          {
            "name": "enabled",
            "type": "dropdown",
            "values": [
              {
                "id": "enabled",
                "label": {
                  "en": "enabled",
                  "de": "aktiviert"
                }
              },
              {
                "id": "disabled",
                "label": {
                  "en": "disabled",
                  "de": "deaktiviert"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}